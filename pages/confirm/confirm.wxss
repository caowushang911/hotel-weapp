/* pages/confirm/confirm.wxss */

.confirm--bg {
  background-color: #f3f5f7;
}

.confirm__btn {
  padding: 8rpx 24rpx;
  border-radius: 5px;
  border: 1rpx solid #68b4ff;
  color: #fff;
  background-color: #409eff;
  font-size: 32rpx; 
}

.l-flex {
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}

.l-flex--option {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
}

.confirm__block {
  padding: 24rpx;
  padding-top: 0;
  margin-bottom: 24rpx;
  background-color: #fff;
}

.confirm__text {
  display: block;
  font-size: 46rpx;
  line-height: 46rpx;
  font-weight: 550;
  margin-top: 24rpx;
}


.confirm__option {
  display: inline-block;
  width: 250rpx;
  color: #909399;
  font-size: 30rpx;
  margin-left: 32rpx;
  margin-top: 8rpx;
}

.confirm__price {
  display: block;
  color: #F56C6C;
  font-size: 42rpx;
}

.confirm__title {
  display: block;
  font-size: 36rpx;
  font-weight: 530;
  line-height: 64rpx;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #EBEEF5;
}

.confirm__intro {
  font-size: 30rpx;
  line-height: 32rpx;
  font-weight: 530;
  color: #909399;
  margin-left: 32rpx;
}


